<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="mqtt.connection.ConnectionState"/>
        <variable name="connectionState"
                  type="androidx.databinding.ObservableField&lt;ConnectionState>"/>

        <variable name="remoteHost" type="mqtt.connection.IRemoteHost"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{remoteHost.uniqueIdentifier()}"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{connectionState.toString()}"/>

    </FrameLayout>
</layout>