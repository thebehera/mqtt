<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/incoming" android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:hint="incoming"/>
        </ScrollView>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/outgoing" android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:hint="out"/>
        </ScrollView>
    </LinearLayout>
</layout>
